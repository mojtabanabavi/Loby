<Project Sdk="Microsoft.NET.Sdk">
	<PropertyGroup>
		<Product>Loby</Product>
		<PackageId>Loby</PackageId>
		<Authors>Mojtaba Nabavi</Authors>
		<Copyright>Copyright © Mojtaba Nabavi 2021</Copyright>
		<Description>
			Lobby is an open-source and lightweight library for .Net that includes
			a set of tools and extensions for easy and fast development.
			For more information see: https://www.nuget.org/packages/Loby/
		</Description>

		<PackageLicenseExpression>MIT</PackageLicenseExpression>
		<RepositoryUrl>https://github.com/mojtabanabavi/loby</RepositoryUrl>
		<PackageProjectUrl>https://github.com/mojtabanabavi/loby</PackageProjectUrl>
		<PackageReleaseNotes>https://github.com/mojtabanabavi/loby/releases/tag/v1.1.0</PackageReleaseNotes>

		<PackageTags>loby extensions tools email random convert hash validate serialize pluralize singularize</PackageTags>

		<Version>1.2.0</Version>
		<FileVersion>1.2.0</FileVersion>
		<AssemblyVersion>1.2.0</AssemblyVersion>

		<NeutralLanguage>en</NeutralLanguage>
		<PackageReadmeFile>README.md</PackageReadmeFile>

		<RepositoryType>git</RepositoryType>
		<GeneratePackageOnBuild>False</GeneratePackageOnBuild>
		<PackageRequireLicenseAcceptance>True</PackageRequireLicenseAcceptance>
		<TargetFrameworks>netstandard2.0;netcoreapp3.1;net5.0;net472</TargetFrameworks>
	</PropertyGroup>

	<ItemGroup Condition=" '$(TargetFramework)' == 'netstandard2.0' or '$(TargetFramework)' == 'net472' ">
		<PackageReference Include="System.Text.Json" Version="6.0.0" />
	</ItemGroup>

	<ItemGroup>
		<None Include="..\README.md">
			<Pack>True</Pack>
			<PackagePath>\</PackagePath>
		</None>
	</ItemGroup>

</Project>
